/* pages/bus/bus.wxss */
.numItem{
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 10px 0;
}
.num{
    width: 35px;
    height: 35px;
    background-color: red;
    color: #fff;
    border-radius: 50%;
    display: block;
    font-size: 18px;
    text-align: center;
    line-height: 35px;
}
.title{
    color: red;
}
.price{
    margin: 10px 0;
}
.calculate{
    width: 100%;
    height: 50px;
    line-height: 50px;
    border-top: 1px solid #000;
}
.calculateAll{
    position: fixed;
    left: 0;
    bottom: 0px;
    width: 100%;
    background-color: #eee;
}